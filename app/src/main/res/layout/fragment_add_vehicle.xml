<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp22"
        android:background="@drawable/bg_button_start"
        android:text="@string/logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp22"
        android:layout_marginEnd="@dimen/dp22"
        android:layout_marginBottom="@dimen/dp22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addVehicle"
        style="@style/bg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp250"
        android:background="@drawable/bg_button_start"
        android:paddingStart="@dimen/dp70"
        android:paddingEnd="@dimen/dp70"
        android:text="@string/add_vehicle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAuto"
        style="@style/bg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp70"
        android:alpha="0"
        android:background="@drawable/bg_button_add_auto"
        android:paddingStart="@dimen/dp52"
        android:paddingEnd="@dimen/dp52"
        android:text="@string/auto"
        app:layout_constraintEnd_toEndOf="@id/addVehicle"
        app:layout_constraintTop_toBottomOf="@id/addVehicle" />

    <View
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp5"
        android:alpha="0"
        android:background="@drawable/separator"
        app:layout_constraintBottom_toTopOf="@id/addMoto"
        app:layout_constraintEnd_toEndOf="@id/addAuto"
        app:layout_constraintStart_toStartOf="@id/addAuto"
        app:layout_constraintTop_toBottomOf="@id/addAuto" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addMoto"
        style="@style/bg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:background="@drawable/bg_button_add_moto"
        android:paddingStart="@dimen/dp52"
        android:paddingEnd="@dimen/dp52"
        android:text="@string/moto"
        app:layout_constraintEnd_toEndOf="@id/addVehicle"
        app:layout_constraintTop_toBottomOf="@id/separator" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_start"
        android:text="list vehicle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/dp22"
        android:padding="@dimen/dp16"/>

</androidx.constraintlayout.widget.ConstraintLayout>