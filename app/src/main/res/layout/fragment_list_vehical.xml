<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textAuto"
            style="@style/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp80"
            android:layout_marginTop="@dimen/dp50"
            android:fontFamily="@font/ubuntu_regular"
            android:shadowColor="@color/black"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="5"
            android:text="@string/auto_"
            android:textColor="@color/bg_button"
            android:textSize="@dimen/sp50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp40"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@id/textMoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAuto"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textMoto"
            style="@style/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp80"
            android:layout_marginTop="@dimen/dp24"
            android:fontFamily="@font/ubuntu_regular"
            android:shadowColor="@color/black"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="5"
            android:text="@string/moto_"
            android:textColor="@color/bg_button"
            android:textSize="@dimen/sp50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listAuto" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listMoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginEnd="@dimen/dp40"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textMoto"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>