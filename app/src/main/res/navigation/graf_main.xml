<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graf_main"
    app:startDestination="@id/startProjectFragment2">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.automotomaintenance.RegisterFragment"
        android:label="RegisterFragment"
        />

    <fragment
        android:id="@+id/startProjectFragment2"
        android:name="com.example.automotomaintenance.StartProjectFragment"
        android:label="StartProjectFragment" >
        <action
            android:id="@+id/action_startProjectFragment2_to_registerFragment"
            app:destination="@id/registerFragment"
            />
        <action
            android:id="@+id/action_startProjectFragment2_to_navigationMainFragment"
            app:destination="@id/navigationMainFragment" />
        <action
            android:id="@+id/action_startProjectFragment2_self"
            app:destination="@id/startProjectFragment2" />
        <action
            android:id="@+id/action_startProjectFragment2_to_fragment_add_vehicle"
            app:destination="@id/addVehicle" />
    </fragment>

    <fragment
        android:id="@+id/navigationMainFragment"
        android:name="com.example.automotomaintenance.NavigationMainFragment"
        android:label="fragment_navigation_main"
        tools:layout="@layout/fragment_navigation_main" >
        <action
            android:id="@+id/action_navigationMainFragment_to_addVehicle"
            app:destination="@id/addVehicle" />
    </fragment>

    <fragment
        android:id="@+id/addVehicle"
        android:name="com.example.automotomaintenance.AddVehiclesFragment"
        android:label="AddVehiclesFragment" >
        <action
            android:id="@+id/action_addVehiclesFragment_to_addAutoFragment"
            app:destination="@id/addAutoFragment" />
        <action
            android:id="@+id/action_addVehiclesFragment_to_addMotoFragment"
            app:destination="@id/addMotoFragment" />
        <action
            android:id="@+id/action_addVehicle_to_listVehicleFragment"
            app:destination="@id/list" />
    </fragment>

    <fragment
        android:id="@+id/list"
        android:name="com.example.automotomaintenance.ListVehicleFragment"
        android:label="ListVehicleFragment" />
    <fragment
        android:id="@+id/addAutoFragment"
        android:name="com.example.automotomaintenance.AddAutoFragment"
        android:label="AddAutoFragment" >
        <action
            android:id="@+id/action_addAutoFragment_to_addVehicle"
            app:destination="@id/addVehicle" />
    </fragment>
    <fragment
        android:id="@+id/addMotoFragment"
        android:name="com.example.automotomaintenance.AddMotoFragment"
        android:label="AddMotoFragment" />

</navigation>